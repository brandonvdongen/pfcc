function text(message)
term.clear()
term.setCursorPos(1,1)
print(message)
end

local lockersl = {peripheral.find("container_betterstorage_lockerlarge")}
local lockers = {peripheral.find("container_betterstorage_locker")}
local crates = {peripheral.find("container_betterstorage_crate")}

text("sorting larger lockers")
for i=1,#lockersl do
text("sorting large lockers: ".. i)
lockersl[i].condenseItems()
end

for i=1,#lockers do
text("sorting small locker: ".. i)
lockers[i].condenseItems()
end

for i=1,#crates do
text("sorting crate: ".. i)
crates[i].condenseItems()
end

text("done sorting")
sleep(1)
text("pfcc 0.1")